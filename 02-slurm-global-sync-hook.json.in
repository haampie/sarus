{
    "version": "1.0.0",
    "hook": {
        "path": "@CMAKE_INSTALL_PREFIX@/bin/slurm_global_sync_hook",
        "env": [
            "HOOK_BASE_DIR=/home",
            "PASSWD_FILE=@CMAKE_INSTALL_PREFIX@/etc/passwd"
        ]
    },
    "when": {
        "annotations": {
            "^com.hooks.slurm-global-sync.enabled$": "^true$"
        }
    },
    "stages": ["prestart"]
}
