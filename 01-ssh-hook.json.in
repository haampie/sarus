{
    "version": "1.0.0",
    "hook": {
        "path": "@CMAKE_INSTALL_PREFIX@/bin/ssh_hook",
        "env": [
            "HOOK_BASE_DIR=/home",
            "PASSWD_FILE=@CMAKE_INSTALL_PREFIX@/etc/passwd",
            "DROPBEAR_DIR=@CMAKE_INSTALL_PREFIX@/dropbear",
            "SERVER_PORT=15263"
        ],
        "args": [
            "ssh_hook",
            "start-ssh-daemon"
        ]
    },
    "when": {
        "annotations": {
            "^com.hooks.ssh.enabled$": "^true$"
        }
    },
    "stages": ["prestart"]
}
